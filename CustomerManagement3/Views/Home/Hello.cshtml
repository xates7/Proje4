@model Customer
@{
    ViewData["Title"] = "Hoş Geldiniz !";
}
<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="col-md-6">
            <form asp-controller="Account" asp-action="Login" method="post">
                <button type="submit" class="btn btn-success btn-lg btn-block mb-3">Giriş Yap</button>
            </form>
            <form asp-controller="Account" asp-action="Register" method="get">
                <button type="submit" class="btn btn-success btn-lg btn-block">Kayıt Ol</button>
            </form>

        </div>
 </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>