@model Customer

<!DOCTYPE html>
<html>
<head>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Müşteri Detayları</h1>

        <div class="row">
            <div class="col-sm-2">ID:</div>
            <div class="col-sm-10">@Model.Id</div>

            <div class="col-sm-2">Ad:</div>
            <div class="col-sm-10">@Model.FirstName</div>

            <div class="col-sm-2">Soyad:</div>
            <div class="col-sm-10">@Model.LastName</div>

            <div class="col-sm-2">E-posta:</div>
            <div class="col-sm-10">@Model.Email</div>

            <div class="col-sm-2">Kimlik:</div>
            <div class="col-sm-10">@Model.Identity</div>

            <div class="col-sm-2">Telefon:</div>
            <div class="col-sm-10">@Model.Phone</div>

            <div class="col-sm-2">Doğum Tarihi:</div>
            <div class="col-sm-10">@Model.BirthDate.Value.ToString("dd.MM.yyyy")</div>

        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Listeye Dön...</a>

  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
