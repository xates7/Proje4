@model List<Customer>

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div>
           

               <h1>Müşteri Listesi</h1>
                
            

            <table id="customer" class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>

                        <th>Id</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-posta</th>
                        <th>Kimlik</th>
                        <th>Telefon</th>
                        <th>Doğum Tarihi</th>
                        <th>Çevrim Durumu</th>
                        <th>İşlemler</th>
                        <th><a href="/Home/Hello" class="btn btn-danger mt-3">Çıkış yap</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Id</td>
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                            <td>@customer.Email</td>
                            <td>@customer.Identity</td>
                            <td>@customer.Phone</td>
                            <td>@customer.BirthDate.Value.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (customer.IsOnline)
                                {
                                    <span class="text-success">Çevrimiçi</span>
                                }
                                else
                                {
                                    <span class="text-danger">Çevrimdışı</span>
                                }
                            </td>
                            <td>
                                <a asp-action="details" asp-route-id="@customer.Id" class="btn btn-info">Detay</a>
                                <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div> <a asp-action="Create" id="ekle" class="btn btn-success">Yeni Müşteri Ekle</a></div>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
