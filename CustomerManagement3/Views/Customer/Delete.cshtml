@model Customer

<!DOCTYPE html>
<html>
<head>
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1> Müşteri Sil</h1>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="FirstName" class="form-label">Ad:</label>
                <span id="FirstName">@Model.FirstName</span>
            </div>
            <div class="mb-3">
                <label for="LastName" class="form-label">Soyad:</label>
                <span id="LastName">@Model.LastName</span>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">E-posta:</label>
                <span id="Email">@Model.Email</span>
            </div>
            <div class="mb-3">
                <label for="Identity" class="form-label">Kimlik:</label>
                <span id="Identity">@Model.Identity</span>
            </div>
            <div class="mb-3">
                <label for="Phone" class="form-label">Telefon:</label>
                <span id="Phone">@Model.Phone</span>
            </div>
            <div class="mb-3">
                <label for="BirthDate" class="form-label">Doğum Tarihi:</label>
                <span id="BirthDate">@Model.BirthDate.Value.ToString("dd.MM.yyyy")</span>
            </div>
            <div>
                <button type="submit" class="btn btn-danger">Sil</button>
            </div>
        </form>

        <a asp-action="Index" class="btn btn-secondary mt-3">Listeye Dön...</a>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
